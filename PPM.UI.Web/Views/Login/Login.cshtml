@model PPM_Model.EmployeeModel
@{
    ViewBag.Title = "Login";
}
<style>
    body {
        background-image: url('../../Content/themes/base/images/bg.jpg');
        background-size: 100%;
    }

    .con {
      /*  margin-top: 35px;
        max-width: 300px;*/
        text-align:center;
        align-content:center;
        margin-top: 35px;
        max-width: 300px;
        margin-left:40%;
        height:280px;
        /*background-color: white;*/
    }
    .text-danger {
        font: bolder;
        color:red;
        
    }

</style>

@using (Html.BeginForm("Autherize", "Login", FormMethod.Post))
{
    <body>
        <div class="con">
            <form >
                <h1>Login</h1>
                <div>
                    <label class="label-danger" style="color:white">@ViewBag.ErrorMessage</label>
                </div>
                <div>
                    @Html.LabelFor(x => x.EmpEmail)
                    @Html.ValidationMessageFor(x => x.EmpEmail, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.EditorFor(x => x.EmpEmail, new { @class = "form-cotrol" })
                </div>
                <div>
                    @Html.LabelFor(x => x.EmpPassword)
                    @Html.ValidationMessageFor(x => x.EmpPassword, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.EditorFor(x => x.EmpPassword, new { @class = "form-cotrol" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info">Login</button>
                    <a href="/Login/Reset" class="btn btn-danger">Reset</a>
                </div>
                <div>
                    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
                    <script src="~/Scripts/jquery.validate.min.js"></script>
                    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
                </div>
            </form>
        </div>
    </body>
}