@model PPM_Model.RoleModel
@{
    ViewBag.Title = "Role";
}

<style>
    body {
        background-image: url('../../Content/themes/base/images/Allbg.jpg');
        background-size: cover;
        color: black;
    }
</style>

<body>
    <h2>Role</h2>
    @using (Html.BeginForm("AddRole", "Role", FormMethod.Post))
    {
        <div class="container">
            <div class="form-group">
                <div class="form-group">
                    <label>Name</label>
                    @Html.ValidationMessageFor(x => x.RoleName, "", new { @class = "error" })
                    @Html.TextBoxFor(x => x.RoleName, new { @class = "form-control" })
                    @*@Html.DropDownListFor(x => x.RoleName,ViewBag.RoleModel as SelectList,"select List", new { @class = "form-control" })*@
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-danger">Reset</button>
                </div>
            </div>
        </div>
        <div>
            <a href="@Url.Action("RoleList")" class="btn btn-primary">Back To Role</a>
        </div>
    }

</body>