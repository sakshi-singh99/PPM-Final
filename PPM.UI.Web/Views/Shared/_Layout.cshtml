<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Ppm", "Login")</li>*@
                    @*@if (User.Identity.IsAuthenticated==false)
                    {

                        <li>@Html.ActionLink("Login", "Login", "Login")</li>

                    }*@
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Dashboard", "Dashboard", "Login")</li>

                        if (Request.Cookies["UserInfoo"].Values.Get("EmpRoleId") != null && Request.Cookies["UserInfoo"].Values.Get("EmpRoleId") == "1")
                        {
                            <li style="margin:0px 0px 0px 0px" ;>@Html.ActionLink("Add Employee+", "Employee", "Employee")</li>

                        }

                        if (Request.Cookies["UserInfoo"].Values.Get("EmpRoleId") != null && Request.Cookies["UserInfoo"].Values.Get("EmpRoleId") == "2")
                        {
                            <li> @Html.ActionLink("Add Project+", "Project", "Project")</li>
                            <li style="margin:0px 0px 0px 0px" ;> @Html.ActionLink("Map Project+", "Map", "Map")</li>
                        }

                        if (Request.Cookies["UserInfoo"].Values.Get("EmpRoleId") != null && Request.Cookies["UserInfoo"].Values.Get("EmpRoleId") == "3")
                        {
                            <li> @Html.ActionLink("Assigned Project", "Dashboard", "Map")</li>
                        }

                        <li style="margin-left:400px">@Html.ActionLink("Logout", "Logout", "Login")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @*<hr />*@
        @*<footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
